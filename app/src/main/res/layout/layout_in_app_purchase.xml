<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="50dp"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/balance_coins_text"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/coins_remaining" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/balance_coins_text"
            android:layout_marginLeft="20dp"
            android:text="1000" />

    </RelativeLayout>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/paddle_pop_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        card_view:cardCornerRadius="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/paddle_pop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.07"
                android:text="Paddle Pop: 300 Coins" />

            <LinearLayout
                android:id="@+id/layout_update_paddle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/paddle_info"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="@string/paddle_quant" />

                    <TextView
                        android:id="@+id/paddle_quantity"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/paddle_info"
                        android:layout_toRightOf="@+id/paddle_info"
                        android:text="3" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/paddle_pop_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/paddle_description" />

                <Button
                    android:id="@+id/buy_paddle"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:text="Buy" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/black_hole_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/black_hole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.07"
                android:text="Black Hole: 300 Coins" />

            <LinearLayout
                android:id="@+id/layout_update_hole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/hole_info"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="@string/hole_quant" />

                    <TextView
                        android:id="@+id/hole_quantity"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/hole_info"
                        android:layout_toRightOf="@+id/hole_info"
                        android:text="3" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/black_hole_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hole_description" />

                <Button
                    android:id="@+id/buy_hole"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:text="Buy" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/multi_puck_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/multi_puck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.07"
                android:text="Multi_puck: 200 Coins" />

            <LinearLayout
                android:id="@+id/layout_multi_puck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/multi_puck_info"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="@string/puck_quant" />

                    <TextView
                        android:id="@+id/puck_quantity"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/multi_puck_info"
                        android:layout_toRightOf="@+id/multi_puck_info"
                        android:text="3" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/multi_puck_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/puck_description" />

                <Button
                    android:id="@+id/buy_puck"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:text="Buy" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>